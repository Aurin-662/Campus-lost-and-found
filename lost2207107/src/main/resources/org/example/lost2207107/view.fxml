<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="viewRoot" prefHeight="600" prefWidth="900" styleClass="view-root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.lost2207107.viewC">
    <top>
        <HBox alignment="CENTER_RIGHT" prefHeight="47.0" prefWidth="900.0" spacing="20" style="-fx-background-color: #1D2A51;">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>
            <children>
                <Label styleClass="nav-label" text="Post Item" textFill="WHITE" />
                <Label styleClass="nav-label" text="Feed" textFill="WHITE" />
                <Label styleClass="nav-label" text="Responses" textFill="WHITE" />
                <Label styleClass="nav-label" text="My Listings" textFill="WHITE" />
                <Label styleClass="nav-label" text="Sign-out" textFill="WHITE" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="30">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <children>
                <Label fx:id="welcomeLabel" styleClass="welcome-label" text="Welcome !" />
                <VBox spacing="10">
                    <children>
                        <Label styleClass="section-header" text="Lost items:" />
                        <FlowPane fx:id="lostItemsContainer" hgap="20" vgap="20" />
                    </children>
                </VBox>

                <VBox spacing="10">
                    <children>
                        <Label styleClass="section-header" text="Found items:" />
                        <FlowPane fx:id="foundItemsContainer" hgap="20" vgap="20" />
                    </children>
                </VBox>

            </children>
        </VBox>
    </center>
</BorderPane>
