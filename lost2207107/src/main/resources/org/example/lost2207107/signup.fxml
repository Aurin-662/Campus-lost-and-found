<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="564.0" prefWidth="586.0" style="-fx-border-radius: 15;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.lost2207107.signupC">
    <children>
        <VBox layoutX="-2.0" prefHeight="624.0" prefWidth="606.0" style="-fx-background-color: #1D2A51;">
            <children>
                <Label alignment="BOTTOM_CENTER" prefHeight="114.0" prefWidth="611.0" text="SIGN-UP" textFill="WHITE">
                    <font>
                        <Font name="SansSerif Bold" size="36.0" />
                    </font>
                </Label>

                <HBox alignment="TOP_CENTER" prefHeight="74.0" prefWidth="606.0" spacing="50.0">
                    <VBox.margin>
                        <Insets top="50.0" />
                    </VBox.margin>
                    <children>
                        <TextField fx:id="usernameField" alignment="CENTER" prefHeight="50.0" prefWidth="178.0"
                                   promptText="Username" style="-fx-border-radius: 10;" />
                        <TextField alignment="CENTER" prefHeight="50.0" prefWidth="180.0" promptText="Last Name" style="-fx-border-radius: 10;">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <effect>
                                <Glow />
                            </effect>
                        </TextField>
                    </children>
                </HBox>

                <HBox alignment="TOP_CENTER" prefHeight="74.0" prefWidth="606.0" spacing="50.0">
                    <children>
                        <TextField alignment="CENTER" prefHeight="50.0" prefWidth="180.0" promptText="Roll" style="-fx-border-radius: 10;" />
                        <TextField alignment="CENTER" prefHeight="50.0" prefWidth="178.0" promptText="Phone Number" style="-fx-border-radius: 10;" />
                    </children>
                </HBox>

                <HBox alignment="TOP_CENTER" prefHeight="74.0" prefWidth="606.0" spacing="50.0">
                    <children>
                        <PasswordField fx:id="passwordField" alignment="CENTER" prefHeight="50.0" prefWidth="180.0"
                                       promptText="Password" style="-fx-border-radius: 10;" />
                        <PasswordField alignment="CENTER" prefHeight="50.0" prefWidth="178.0" promptText="Confirm Password" style="-fx-border-radius: 10;">
                            <effect>
                                <Glow />
                            </effect>
                        </PasswordField>
                    </children>
                </HBox>

                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#submit2"
                        prefHeight="34.0" prefWidth="110.0" style="-fx-background-color: #c7c9ff;" text="Submit">
                    <VBox.margin>
                        <Insets bottom="10.0" left="250.0" top="40.0" />
                    </VBox.margin>
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>

                <Label fx:id="statusLabel" textFill="WHITE" alignment="CENTER" prefHeight="30.0" prefWidth="606.0" />

                <HBox>
                    <VBox.margin>
                        <Insets left="200.0" top="40.0" />
                    </VBox.margin>
                    <children>
                        <Label text="Already have an account?!" textFill="#c7c9ff">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <Button mnemonicParsing="false" onAction="#login" prefHeight="26.0" prefWidth="82.0"
                                style="-fx-background-color: #1D2A51;" text="Click here" textFill="#c7c9ff">
                            <font>
                                <Font name="Yu Gothic UI Semibold" size="12.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>